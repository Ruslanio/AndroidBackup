<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruslan.thegame.activitys.MenuActivity">


    <Button
        android:id="@+id/btn_start"
        android:text="@string/start"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_square1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"/>

    <View
        android:id="@+id/v_square2"
        android:layout_toRightOf="@id/v_square1"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"/>

    <View
        android:id="@+id/v_square3"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@id/v_square2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"/>



</RelativeLayout>
